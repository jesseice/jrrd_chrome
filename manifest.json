{
  "manifest_version": 3,
  "name": "今日热点",
  "description": "今日热点，点击展开",
  "version": "1.0",
  "icons": {
    "16": "logo-16.png",
    "32": "logo-32.png",
    "48": "logo-48.png",
    "128": "logo-128.png"
  },
  "action": {
    "default_popup": "src/popup.html",
    "default_title": "点击展开"
  },
  "side_panel": {
    "default_path": "src/crx/side.html"
  },
  "permissions": [
    "sidePanel"
  ],
  "host_permissions": [
    "https://www.zhihu.com/"
  ],
  "background": {
    "service_worker": "src/crx/background.ts"
  }
}